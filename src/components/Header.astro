---
import Menu from './Menu'
import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<header class="flex items-center justify-between p-6 md:items-baseline">
  <a href={`/${lang}`} class="font-heading text-3xl">rafaelalma</a>
  <nav class="hidden md:flex md:flex-1 md:justify-center">
    <ul class="flex gap-6">
      <li>
        <a class="font-heading text-xl" href={`/${lang}/about`}
          >{t('nav.about')}</a
        >
      </li>
      <li>
        <a class="font-heading text-xl" href={`/${lang}/blog`}
          >{t('nav.blog')}</a
        >
      </li>
      <li>
        <a class="font-heading text-xl" href={`/${lang}/tags`}
          >{t('nav.tags')}</a
        >
      </li>
    </ul>
  </nav>
  <Menu client:load lang={lang} />
</header>
